<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Membership Details"
        android:id="@+id/textView8"
        android:background="@color/caldroid_gray"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:showDividers="middle"
        android:divider="?android:attr/dividerVertical" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:width="0dp"
                android:layout_weight="0.3"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:id="@+id/textView1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rawrtan@gmail.com"
                android:width="0dp"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView7"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_gravity="center_vertical"
                android:id="@+id/editEmail"
                android:background="@android:drawable/screen_background_light_transparent"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:width="0dp"
                android:layout_weight="0.3"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:id="@+id/textView2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tania DePasquale"
                android:width="0dp"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView6"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_gravity="center_vertical"
                android:id="@+id/editName"
                android:background="@android:drawable/screen_background_light_transparent"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IEEE ID"
                android:width="0dp"
                android:layout_weight="0.3"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12938vdkja2189"
                android:width="0dp"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical"
                android:id="@+id/membershipId"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_gravity="center_vertical"
                android:id="@+id/editMembershipId"
                android:background="@android:drawable/screen_background_light_transparent"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:width="0dp"
                android:layout_weight="0.3"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 points"
                android:width="0dp"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical"
                android:textStyle="italic"
                android:id="@+id/numPoints"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@android:drawable/ic_menu_info_details"
                android:layout_gravity="center_vertical"
                android:id="@+id/aboutPoints"
                android:background="@android:drawable/screen_background_light_transparent"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="0dp"
                android:layout_weight="0.3"
                android:text="Next Reward"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="700 points"
                android:width="0dp"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical"
                android:textStyle="italic"
                android:id="@+id/nextReward"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@android:drawable/ic_menu_info_details"
                android:layout_gravity="center_vertical"
                android:id="@+id/aboutNextReward"
                android:background="@android:drawable/screen_background_light_transparent"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Events Attended"
        android:id="@+id/textView3"
        android:background="@color/caldroid_gray"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

</LinearLayout>