<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linearLayout"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:contentDescription="@string/ieee_logo"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:divider="?android:attr/dividerVertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:showDividers="beginning|middle">

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:text="@string/email"
                android:textStyle="bold"
                android:width="0dp"/>

            <EditText
                android:id="@+id/memberEmail"
                android:inputType="textEmailAddress"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                android:width="0dp"/>

            <TextView
                android:id="@+id/memberEmailText"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:text="@string/test_email"
                android:textSize="14sp"
                android:width="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:text="@string/password"
                android:textStyle="bold"
                android:width="0dp"/>

            <TextView
                android:editable="false"
                android:id="@+id/passwordText"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:password="true"
                android:textSize="14sp"
                android:textStyle="italic"
                android:width="0dp"/>

            <ImageButton
                android:background="@android:color/transparent"
                android:contentDescription="@string/edit"
                android:id="@+id/changePassword"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:src="@android:drawable/ic_menu_edit"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:text="@string/name"
                android:textStyle="bold"
                android:width="0dp"/>

            <TextView
                android:id="@+id/memberNameText"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:text="@string/test_name"
                android:textSize="14sp"
                android:width="0dp"/>

            <EditText
                android:id="@+id/memberName"
                android:inputType="textPersonName"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                android:width="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:text="Major"
                android:textStyle="bold"
                android:width="0dp"/>

            <TextView
                android:id="@+id/memberMajorText"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:text="CS"
                android:textSize="14sp"
                android:width="0dp"/>

            <EditText
                android:id="@+id/memberMajor"
                android:inputType="textAutoCorrect"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                android:width="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:text="Year"
                android:textStyle="bold"
                android:width="0dp"/>

            <TextView
                android:id="@+id/memberYearText"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:text="3rd"
                android:textSize="14sp"
                android:width="0dp"/>

            <Spinner
                android:hint="Year"
                android:id="@+id/memberYear"
                android:inputType="text"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:prompt="@string/year"
                android:spinnerMode="dialog"
                android:visibility="gone"
                android:width="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:text="IEEE ID"
                android:textStyle="bold"
                android:width="0dp"/>

            <TextView
                android:id="@+id/memberIdText"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:text="@string/test_id"
                android:textSize="14sp"
                android:width="0dp"/>

            <EditText
                android:id="@+id/memberId"
                android:inputType="textEmailAddress"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                android:width="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:text="@string/points"
                android:textStyle="bold"
                android:width="0dp"/>

            <TextView
                android:id="@+id/numPoints"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:text="500 points"
                android:textStyle="italic"
                android:width="0dp"/>

            <ImageButton
                android:background="@android:color/transparent"
                android:contentDescription="@string/info"
                android:id="@+id/aboutPoints"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:src="@android:drawable/ic_menu_info_details"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:background="@color/ucla_blue"
        android:id="@+id/textView3"
        android:layout_height="35dp"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/events_attended"
        android:textColor="@color/caldroid_white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal"/>

    <TextView
        android:gravity="center"
        android:id="@+id/noEventsView"
        android:layout_height="70dp"
        android:layout_width="fill_parent"
        android:text="You haven't attended any events!"/>
</LinearLayout>